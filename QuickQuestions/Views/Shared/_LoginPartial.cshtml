@using Microsoft.AspNetCore.Identity
@using QuickQuestions.Areas.Identity.Data

@inject SignInManager<QuickQuestionsUser> SignInManager
@inject UserManager<QuickQuestionsUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Добро пожаловать, @((await UserManager.GetUserAsync(User)).FullName)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <input id="logout" type="submit" class="nav-link btn btn-link border-0 text-white" value="Выйти"/>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Зарегистрироваться</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
    </li>
}
</ul>

@model QuickQuestions.Models.Survey

@{
    ViewData["Title"] = Model.Name;
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <form asp-action="Answer" id="form" enctype="multipart/form-data">
            <partial name="_Survey" model="Model" />

            <div class="mb-3">
                <input type="submit" value="Отправить" class="btn btn-send" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/quill/quill.min.js"></script>
    <script src="~/js/survey-answer-functionality.js" asp-append-version="true"></script>
}

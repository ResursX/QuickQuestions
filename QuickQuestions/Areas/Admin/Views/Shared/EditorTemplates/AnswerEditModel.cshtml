@model QuickQuestions.Areas.Admin.Models.AnswerEditModel

@*  *@

<div class="answer row border mb-3 ">
    <div class="col-auto answer-handle align-self-center">
        <div class="btn">+</div>
    </div>

    <input asp-for="ID" type="hidden" />
    <input asp-for="QuestionID" type="hidden" />
    <input asp-for="Index" class="index-edit" type="hidden" />

    <div class="col edit-body">
        <div class="text-edit mb-2">
            <label class="form-label">Содержимое</label>
            <input asp-for="Summary" class="form-control text-edit-summary" type="hidden" />
            <input asp-for="Text" class="form-control text-edit-input" type="hidden" />
            <div class="text-edit-field"></div>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
    </div>

    <div class="col-auto me-0 px-0">
        <button class="remove-element btn-close" type="button"></button>
    </div>
</div>
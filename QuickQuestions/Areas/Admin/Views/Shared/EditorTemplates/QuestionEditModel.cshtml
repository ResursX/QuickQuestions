@model QuickQuestions.Areas.Admin.Models.QuestionEditModel

@*  *@

<div class="question row border my-3 pe-0">
    <input asp-for="ID" type="hidden" />
    <input asp-for="SurveyID" type="hidden" />
    <input asp-for="Index" class="index-edit" type="hidden" />

    <div class="col-auto question-handle align-self-center">
        <div class="btn">+</div>
    </div>

    <div class="col edit-body">
        <div class="text-edit mb-3">
            <label class="form-label">Содержимое</label>
            <input asp-for="Summary" class="form-control text-edit-summary" type="hidden" />
            <input asp-for="Text" class="form-control text-edit-input" type="hidden" />
            <div class="text-edit-field"></div>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Открытый ответ</label>
            <select asp-for="CustomAnswerType" class="form-select" asp-items="@Html.GetEnumSelectList<QuestionCustomAnswerType>()"></select>
            <span asp-validation-for="CustomAnswerType" class="text-danger"></span>
        </div>

        <div class="answers mb-3">
            <div class="mb-1">
                <label class="form-label">Ответы</label>
            </div>

            <div class="answers-container container mb-3">
                @Html.EditorFor(model => model.Answers)
            </div>

            <div>
                <input class="add-answer btn btn-primary" type="button" value="Добавить ответ">
            </div>
        </div>
    </div>

    <div class="col-auto me-0 px-0">
        <button class="remove-element btn-close" type="button"></button>
    </div>
</div>
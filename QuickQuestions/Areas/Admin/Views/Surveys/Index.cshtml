@model IEnumerable<QuickQuestions.Models.Survey>

@{
    ViewData["Title"] = "Управление опросами";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <h1>Управление опросами</h1>

        <p>
            <a asp-action="Create">Создать</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Имя
                    </th>
                    <th class="col-sm-2">
                        Дата создания
                    </th>
                    <th class="col-sm-2">
                        Дата изменения
                    </th>
                    <th class="col-sm-2">
                        Дата начала
                    </th>
                    <th class="col-sm-2">
                        Дата окончания
                    </th>
                    <th class="col-sm-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @(item.DateCreated.ToLocalTime().ToString("g"))
                        </td>
                        <td>
                            @(item.DateUpdated.ToLocalTime().ToString("g"))
                        </td>
                        <td>
                            @(item.DateStart.ToLocalTime().ToString("g"))
                        </td>
                        <td>
                            @(item.DateEnd.ToLocalTime().ToString("g"))
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                            <a asp-action="Render" asp-route-id="@item.ID">Просмотр</a> |
                            <a asp-area="" asp-controller="Surveys" asp-action="Results" asp-route-id="@item.ID">Результаты</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
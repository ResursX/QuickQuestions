@model IEnumerable<QuickQuestions.Models.QuestionResultFile>

@{
    ViewData["Title"] = "Файлы пользователя";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <h1>@ViewData["Title"] @ViewData["UserName"]</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Имя файла
                    </th>
                    <th>
                        Дата
                    </th>
                    <th>
                        Тип
                    </th>
                    <th>
                        Размер
                    </th>
                    <th class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="UserFiles" asp-action="View" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.FileName)</a>
                        </td>
                        <td>
                            @(item.DateCreated.ToLocalTime().ToString("g"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContentType)
                        </td>
                        <td>
                            @(item.Content.Length)
                        </td>
                        <td>
                            <a asp-controller="UserFiles" asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


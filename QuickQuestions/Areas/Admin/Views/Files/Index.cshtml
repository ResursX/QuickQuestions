@model IEnumerable<QuickQuestions.Models.File>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <h1>Управление</h1>

        <p>
            <a asp-action="Create">Загрузить</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Имя
                    </th>
                    <th>
                        Дата загрузки
                    </th>
                    <th>
                        Тип
                    </th>
                    <th class="col-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @(item.DateCreated.ToLocalTime().ToString("g"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentType)
                    </td>
                    <td>
                        <a asp-action="View" asp-route-id="@item.ID">Просмотр</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>

